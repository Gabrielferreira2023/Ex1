#include <stdio.h>

int main() {
  
  float base, altura, area;

  printf("Digite a base do retângulo (em metros): ");
  scanf("%f", &base);

  printf("Digite a altura do retângulo (em metros): ");
  scanf("%f", &altura);

  area = base * altura; 

  printf("A área do retângulo é: %.2f metros quadrados.\n", area);

  return 0;
}
